<div id="<%= dom_id task %>" class="Task">
  <div class="Task-Content" >
    <label for="">
      <input type="checkbox" id="task-check">
    </label>
    <p class="Task-Description">
      <%= task.description %>
    </p>

    <p>
      <strong>Prazo:</strong>
      <%= task.deadline %>
    </p>

    <div><%= link_to image_tag('Edit.png', alt: 'Editar'), edit_task_path(task) %></div>
    <div><%= button_to image_tag('Delete.png', alt: 'Deletar'), task, method: :delete %></div>
  </div>
</div>
