<div id="<%= dom_id task %>" class="Task">
  <div class="Task-Content">

    <div data-controller="tasks" >
      <%= check_box_tag "task[concluido]", 1, task.concluido, class: "task-checkbox", id: "task_#{task.id}", data: { action: "tasks#toggle" } %>
    </div>


    <p class="Task-Description">
      <%= task.description %>
    </p>

    <p>
      <%= task.deadline.strftime("%d/%m/%Y") %>
    </p>

    <div><%= link_to image_tag('Edit.png', alt: 'Editar'), edit_task_path(task) %></div>
    <div><%= button_to image_tag('Delete.png', alt: 'Deletar'), task, data: { turbo_method: :delete, turbo_confirm: "Deseja excluir a tarefa?" } %></div>
  </div>
</div>
